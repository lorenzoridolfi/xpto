{
    "logging": {
        "version": 1,
        "disable_existing_loggers": false,
        "formatters": {
            "standard": {
                "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
            },
            "detailed": {
                "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s - [%(filename)s:%(lineno)d]"
            }
        },
        "handlers": {
            "console": {
                "class": "logging.StreamHandler",
                "level": "INFO",
                "formatter": "standard",
                "stream": "ext://sys.stdout"
            },
            "file": {
                "class": "logging.handlers.RotatingFileHandler",
                "level": "DEBUG",
                "formatter": "detailed",
                "filename": "logs/app.log",
                "maxBytes": 10485760,
                "backupCount": 5,
                "encoding": "utf8"
            },
            "error_file": {
                "class": "logging.handlers.RotatingFileHandler",
                "level": "ERROR",
                "formatter": "detailed",
                "filename": "logs/error.log",
                "maxBytes": 10485760,
                "backupCount": 5,
                "encoding": "utf8"
            }
        },
        "loggers": {
            "feedback_storage": {
                "level": "DEBUG",
                "handlers": ["console", "file", "error_file"],
                "propagate": false
            },
            "feedback_manager": {
                "level": "DEBUG",
                "handlers": ["console", "file", "error_file"],
                "propagate": false
            },
            "api": {
                "level": "INFO",
                "handlers": ["console", "file", "error_file"],
                "propagate": false
            }
        },
        "root": {
            "level": "INFO",
            "handlers": ["console", "file"]
        }
    },
    "openai": {
        "api_key": "your-api-key-here",
        "model": "gpt-4",
        "temperature": 0.7,
        "max_tokens": 4096,
        "timeout": 30,
        "retry_attempts": 3,
        "retry_delay": 1
    },
    "storage": {
        "max_entries": 1000,
        "purge_older_than_hours": 24,
        "keep_last_n_entries": 100
    },
    "api": {
        "host": "0.0.0.0",
        "port": 8000,
        "debug": false,
        "workers": 4,
        "timeout": 60,
        "cors_origins": ["*"]
    },
    "cache": {
        "enabled": true,
        "max_size": 1000,
        "ttl_seconds": 3600,
        "cleanup_interval_seconds": 300
    }
} 